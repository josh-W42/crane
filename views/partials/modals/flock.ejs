<div class="modal fade" id="newFlockModal" tabindex="-1" aria-labelledby="newFlockModal" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="newFlock">New Flock</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <span class="text-muted">* - required</span>
                <form class="text-center needs-validation" action="/flocks" method="POST" enctype="multipart/form-data">
                  <div class="my-3 form-floating">
                    <input id="flock-name" class="form-control" placeholder="Flock Name" type="text" name="name" required/>
                    <label for="flock-name">Flock Name*</label>
                  </div>
                  <div class="col">
                    <div class="form-floating my-3">
                        <textarea class="form-control" id="flock-description" placeholder="description" name="description" height="100"></textarea>
                      <label for="flock-description">Description</label>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-xs-3 col-md-4 my-3">
                      <img id="imagePreview" width="100" height="100" src="https://res.cloudinary.com/dom5vocai/image/upload/v1613426540/crane_logo_xzo7cm.png" alt="profile photo" />
                    </div>
                    <div class="col-xs-3 col-md-6 my-3">
                      <label for="auth-image" class="form-label w-100">Flock Photo</label>
                      <input class="form-control-sm" type="file" accept="image/*" name="image" id="flock-image">
                    </div>
                  </div>
                    <div class="col">
                      <div class="form-check form-switch">
                        <div class="d-flex column">
                          <div class="container">
                            <label class="form-check-label fs-4" for="flock-privacy">Privacy:</label>
                          </div>
                          <div class="container ms-4">
                            <input class="form-check-input fs-5" type="checkbox" name="isPrivate" id="flock-privacy">
                          </div>
                        </div>
                      </div>
                      <div class="text-start">
                        <span id="publicInfo">
                            <span class="fs-3 fw-bold">Public:</span>
                            <ul>
                                <li>Everyone can see posts and members of this flock.</li>
                                <li>Anyone can be a member of this flock.</li>
                            </ul> 
                        </span>
                        <span id="privateInfo" class="hidden">
                            <span class="fs-3 fw-bold">Private:</span>
                            <ul>
                                <li>Member requests need to be approved before joining.</li>
                                <li>Only members of this flock can see the posts within it.</li>
                                <li>Members are hidden from anyone outside this flock.</li>
                            </ul>
                        </span>
                      </div>
                    </div>
                  <div class="m-3">
                    <button id="signUpSubmit" type="submit" class="btn btn-primary">CREATE FLOCK</button>
                  </div>
                </form>
              </div>
            </div>
        </div>
    </div>
</div>