<div class="modal fade" id="editProfileModal" tabindex="-1" aria-labelledby="editProfileModal" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Editing <%= currentUser.userName %>: </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
              <form class="text-center needs-validation" action="/users/<%= currentUser.userName %>/edit/?_method=PUT" method="POST" enctype="multipart/form-data">
                <div class="my-3 form-floating">
                  <input id="auth-username" class="form-control" placeholder="Your Username" type="text" name="userName" value="<%= currentUser.userName %>" required/>
                  <label for="auth-username">Username</label>
                </div>
                <div class="row">
                  <div class="col">
                    <div class="form-floating my-3">
                      <input type="text" name="firstName" class="form-control" placeholder="First Name" id="auth-firstname" value="<%= currentUser.firstName %>" />
                      <label for="auth-firstName">First Name</label>
                    </div>
                  </div>
                  <div class="col">
                    <div class="form-floating my-3">
                      <input type="text" name="lastName" class="form-control" placeholder="Last Name" id="auth-lastname" value="<%= currentUser.lastName %> " />
                      <label for="auth-lastName">Last Name</label>
                    </div>
                  </div>
                </div>
                <div class="form-floating my-3">
                  <input type="email" name="email" class="form-control" placeholder="Email" id="auth-email" value="<%= currentUser.email %>" required/>
                  <label for="auth-email">Email*</label>
                </div>
                </div>
                <div class="row">
                  <div class="col-xs-3 col-md-4 my-3">
                    <img id="imagePreview" width="100" height="100" src="<%= currentUser.imageUrl %>" alt="profile photo" />
                  </div>
                  <div class="col-xs-3 col-md-6 my-3">
                    <label for="auth-image" class="form-label w-100">Profile Picture</label>
                    <input class="form-control-sm" type="file" accept="image/*" name="image" id="auth-image">
                  </div>
                </div>
                  <div class="col">
                    <div class="form-check form-switch">
                      <div class="d-flex column">
                        <div class="container">
                          <label class="form-check-label fs-4" for="auth-privacy">Privacy:</label>
                        </div>
                        <div class="container ms-4">
                          <input class="form-check-input fs-5" type="checkbox" name="isPrivate" id="auth-privacy"
                          <% if (currentUser.isPrivate) { %>
                           checked
                          <% } %>
                          >
                        </div>
                      </div>
                    </div>
                    <div class="text-start">
                      <span id="publicInfo" class="<%= currentUser.isPrivate ? "hidden" : "" %>">
                        <span class="fs-3 fw-bold">Public:</span>
                        <ul>
                          <li>Everyone can see your posts.</li>
                          <li>Anyone can follow you.</li>
                          <li>If you post in a private flock, only those members can view it.</li>
                        </ul>
                      </span>
                      <span id="privateInfo" class="<%= currentUser.isPrivate ? "" : "hidden" %>">
                        <span class="fs-3 fw-bold">Private:</span>
                        <ul>
                          <li>Only your followers can see your posts.</li>
                          <li>You choose who follows you.</li>
                          <li>If you post in a private flock, only those members can view it.</li>
                        </ul>
                      </span>
                    </div>
                  </div>
                <div class="m-3">
                  <button id="editSubmit" type="submit" class="btn btn-primary">Apply Changes</button>
                </div>
              </form>
            </div>
        </div>
    </div>
</div>